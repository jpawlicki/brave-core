import("//brave/components/common/typescript.gni")
import("//mojo/public/tools/bindings/mojom.gni")

assert(!is_android)

transpile_web_ui("brave_new_tab") {
  entry_points = [ [
        "new_tab",
        rebase_path("new_tab.tsx"),
      ] ]
